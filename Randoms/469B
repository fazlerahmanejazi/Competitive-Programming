#include<iostream>

using namespace std;

int main()
{
    int p,q,l,r;
	cin >> p >> q >> l >> r;
	int x[1001],y[1001];
	int u,v;
	for(int i=0;i<p;i++)
	{
		cin >> u >> v;
		while(u<=v)
			x[u++]=1;
	}
	for(int i=0;i<q;i++)
	{
		cin >> u >> v;
		while(u<=v)
			y[u++]=1;
	}
	int count=0;
	for(int t=l;t<=r;t++)
	{
		for(int i=t;i<1001;i++)
		{
			if(x[i]==1&&y[i-t]==1)
			{
				count++;
				break;
			}
		}
	}
	cout << count;
    return 0;
}
